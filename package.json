    "@angular/platform-browser-dynamic": "^15.1.3",
    "@angular/router": "^15.1.3",
    "core-js": "^3.27.2",
    "rxjs": "~7.8.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.3",
    "@angular/cli": "^15.1.3",
    "@angular/compiler-cli": "^15.0.0",
    "@angular/language-service": "^15.1.3",
    "@types/node": "~18.13.0",
    "@types/jasmine": "~4.3.1",
